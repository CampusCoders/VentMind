<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/linearExperiencePost"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginHorizontal="8dp"
    android:layout_marginTop="8dp"
    android:padding="8dp"
    android:background="@drawable/custom_post_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageViewExperiencePostAvatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:layout_margin="8dp"
            android:background="@drawable/custom_avatar_xl"></ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textViewExperiencePostUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="4dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="SampleUsername"></TextView>
            <TextView
                android:id="@+id/textViewExperiencePostDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginStart="4dp"
                android:textSize="12sp"
                android:text="SampleDate"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="15dp">
            <TextView
                android:id="@+id/textViewPostExperienceTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Relationship"
                android:textColor="@color/text_color"
                android:padding="8dp"
                android:textStyle="bold|italic"
                android:background="@drawable/custom_tag"></TextView>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textViewExperiencePostContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_margin="8dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Duis non elit ac lorem congue molestie. Duis non tristique orci."></TextView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginHorizontal="8dp"
        android:background="@drawable/custom_line"></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="24dp"
            android:gravity="center">
            <ImageView
                android:id="@+id/imageViewExperienceLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_like"
                android:layout_marginRight="4dp"></ImageView>
            <TextView
                android:id="@+id/textViewExperienceLikeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:id="@+id/imageViewExperienceDislike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_dislike"
                android:layout_marginRight="4dp"></ImageView>
            <TextView
                android:id="@+id/textViewExperienceCommentCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18"></TextView>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>